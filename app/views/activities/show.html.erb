<div class="container">
  <h1><%= @activity.title %></h1>
  <%= link_to "Modifier", edit_activity_path(@activity) %>
  <%= link_to "Supprimer", activity_path(@activity), method: :delete, data: { confirm: "Etes-vous sûr de vouloir supprimer #{@activity.title} ?"} %>

  <p>Description: <%= @activity.description %></p>
  <p>Durée: <%= @activity.duration %></p>
  <p>Distanciel: <%= @activity.remote %></p>
  <p><%#= @activity.teacher.first_name %></p>
  <p>Distanciel: <%= @activity.remote %></p>

<%# SESSIONS %>
  <h3>Sessions</h3>
    <%= simple_form_for [ @booking ] do |f| %>
      <%= f.input :session_id, collection: Session.where(activity_id: @activity), include_blank: true %>
      <%= f.submit "Choisir ce session", class: "btn btn-primary " %>
    <% end %>

<%# MAP %>
<% if @activity.remote == false %>
    <div id="map" class="mb-4 mt-3"
    style="width: 100%; height: 400px; border-radius: 5px; box-shadow: 0 0 15px rgba(0,0,0,0.1);"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% elsif @activity.remote == true %>
<% end %>

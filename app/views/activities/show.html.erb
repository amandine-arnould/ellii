<div class="container">
  <h1><%= @activity.title %></h1>
  <%= link_to "Modifier", edit_activity_path(@activity) %>
  <%= link_to "Supprimer", activity_path(@activity), method: :delete, data: { confirm: "Etes-vous sÃ»r de vouloir supprimer #{@activity.title} ?"} %>

<% if @activity.remote == false %>
    <div id="map" class="mb-4 mt-3"
    style="width: 100%; height: 400px; border-radius: 5px; box-shadow: 0 0 15px rgba(0,0,0,0.1);"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% else %>

<% end %>

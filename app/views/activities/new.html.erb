<div class="container">
  <h1>Ajouter une activité</h1>

  <%= simple_form_for @activity do |f| %>
    <%= f.error_notification %>

    <%= f.input :title, label: "Nom de l'activité", collection: Activity::TITLE, prompt: "Choisir le nom de l'activité" %>

    <%= f.input :description, label: "Description", placeholder: "Entrer la description (min #{Activity::MIN_CHAR_DESCRIPTION} caractères)" %>

    <%= f.input :duration, label: "Durée", placeholder: "Entrer la durée de l'activité (en minutes)" %>

    <%= f.input :remote, as: :radio_buttons, collection: Activity::LOCATION, label: "Localisation" %>

    <%= f.input :mind, as: :radio_buttons, collection: Activity::TYPE, label: "Type" %>

    <%= f.input :max_participants, input_html: { min: '1' }, label: "Nombre de participants maximum", placeholder: "Entrer le nombre de participants maximum" %>

    <%= f.input :min_participants, input_html: { min: '1' }, label: "Nombre de participants minimum", placeholder: "Entrer le nombre de participants minimum" %>

    <%= f.input :address, label: "Adresse", placeholder: "Entrer l'adresse de l'activité" %>

    <%= f.button :submit, "Créer une activité", class: "btn-primary" %>
    <%= f.button :button, "Annuler", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>

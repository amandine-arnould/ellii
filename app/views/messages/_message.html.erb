<div class="message message-container" id="message-<%= message.id %>">
  <% if current_user.avatar.attached? %>
    <%= cl_image_tag current_user.avatar.key, class: "avatar" %>
  <% else %>
    <%= image_tag "default_avatar.png", class: "avatar" %>
  <% end %>
  <div class="message-txt">
    <h3><%= message.user.first_name %> <small>- <%= message.created_at.strftime("%a %e %b Ã  %l:%M%p") %></small></h3>
    <p><%= message.content %></p>
  </div>
</div>

<div data-controller="message-form">
  <%= simple_form_for [ session, message ],
                      url: activity_session_messages_path(session),
                      data: {
                        message_form_target: 'form',
                        action: 'submit->message-form#send'
                        } do |f| %>
    <%= f.input :content, label: false, placeholder: "Tapez votre message ici :" %>
  <% end %>
</div>

  <%= simple_form_for [ session, message ],
                      url: activity_session_messages_path(session),
                      data: {
                        message_form_target: 'form',
                        action: 'submit->message-form#send'
                        } do |f| %>
    <%= f.input :content,
          label: false,
          placeholder: "Entrer votre message ici",
          class: "new-message-txt",
          input_html: {style: "margin-right: 10px;"} %>
    <%= f.button :submit, "Envoyer", class: "btn-primary btn-font btn-send chat-submit" %>
  <% end %>

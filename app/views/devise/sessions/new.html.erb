<div class="container d-flex justify-content-between align-items-center login-form">
  <%= image_tag 'illustrations/login.png' %>
  <div class="flex-grow-1 form align-self-stretch d-flex flex-column justify-content-center">
    <h3>Bonjour !</h3>
    <h2>Ravis de vous revoir ðŸ˜Š</h2>
    <p class="instruction">Veuillez vous connecter pour accÃ©der Ã  votre espace personnel</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Adresse mail",
                    placeholder: "Entrer votre adresse mail",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: "Mot de passe",
                    placeholder: "Entrer votre mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion", class:"btn btn-primary btn-login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>

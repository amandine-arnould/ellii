<div class="container d-flex justify-content-between align-items-center password-form">
  <%= image_tag 'illustrations/password.png' %>
  <div class="flex-grow-1 form align-self-stretch d-flex flex-column justify-content-center">
    <h3>Vous avez oublié votre mot de passe ? Pas de panique !</h3>
    <h2>Réinitialiser mon mot de passe</h2>
    <p class="instruction">Veuillez entrer votre adresse email ci-dessous et nous vous enverrons un email pour réinitiliaser votre mot de passe</p>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "Adresse mail",
                    placeholder: "Entrer votre adresse mail",
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Réinitialiser", class:"btn btn-primary btn-login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

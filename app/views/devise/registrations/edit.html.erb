<div class="container">
  <h2>Mettre à jour votre profil <%= current_user.first_name.capitalize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: "Adresse mail",
                  placeholder: "Enter votre nouvelle adresse mail"%>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de confirmation: <%= resource.unconfirmed_email %></p>
      <% end %>


      <%= f.input :last_name,
                  required: true,
                  label: "Nom de famille",
                  placeholder: "Changer votre nom de famille" %>
      <%= f.input :first_name,
                  required: true,
                  label: "Prénom",
                  placeholder: "Changer votre prénom" %>
      <%= f.input :address,
                  required: true,
                  input_html: { autocomplete: "address" },
                  label: "Adresse",
                  placeholder: "Entrer votre nouvelle adresse" %>
      <%= f.input :phone_number,
                  required: true,
                  input_html: { autocomplete: "phone-number" },
                  label: "Numéro de téléphone",
                  placeholder: "Entrer votre nouveau numéro de téléphone" %>
      <%= f.input :password,
                  label: "Nouveau mot de passe",
                  placeholder: "Entrer votre nouveau mot de passe",
                  hint: "Laissez le champs vide si vous ne souhaitez pas changer votre mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du nouveau mot de passe",
                  placeholder: "Confirmer votre nouveau mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: "Mot de passe actuel",
                  placeholder: "Entrer votre mot de passe actuel",
                  hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour mon profil", class:"btn btn-primary mb-3" %>
    </div>
  <% end %>

  <h3>Clôturer mon compte</h3>

  <p>Insatisfait? <%= link_to "Clôturer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr(e)?" }, method: :delete %></p>

  <%= link_to "Retour", :back %>
</div>

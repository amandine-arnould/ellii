<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :last_name,
                required: true,
                label: "Nom de famille",
                placeholder: "Entrer votre nom de famille" %>
    <%= f.input :first_name,
                required: true,
                label: "Prénom",
                placeholder: "Entrer votre prénom" %>
    <%= f.input :address,
                required: true,
                input_html: { autocomplete: "address", id: "activity_address" },
                label: "Adresse",
                placeholder: "Entrer votre adresse" %>
    <%= f.input :phone_number,
                required: true,
                input_html: { autocomplete: "phone-number" },
                label: "Numéro de téléphone",
                placeholder: "Entrer votre numéro de téléphone" %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "Adresse mail",
                placeholder: "Entrer votre adresse mail" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: "Mot de passe",
                placeholder: "Entrer votre mot de passe" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: "Confirmation du mot de passe",
                placeholder: "Enter de nouveau votre mot de passe" %>
    <%= f.select :status, ["teacher", "senior", "relative"],
                required: true %>
    <%= f.input :avatar, as: :file,
                label: "Ma photo" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Je m'inscris", class: "btn btn-primary mb-3" %> <%= render "devise/shared/links" %>
  </div>
<% end %>
